<Page x:Class="AgencySystem.View.Pages.AddingAgency"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:AgencySystem.View.Pages"
      mc:Ignorable="d" Height="720" Width="1280">
    <Page.Resources>
        <ResourceDictionary Source="../Resouce.xaml"></ResourceDictionary>
    </Page.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="6*" />
            <ColumnDefinition Width="4*" />
        </Grid.ColumnDefinitions>

        <!--Confirm Button-->
        <Border Grid.Column="1"
            VerticalAlignment="Bottom"
            HorizontalAlignment="Right"
            Margin="60 150"
            CornerRadius="10"
            Width="120"
            Height="40"
            BorderThickness="4"
            Background="#3CA1FF">
            <Label Content="Confirm"
                   Margin="0 -8 0 -5"
                   Width="wrap"
                   Height="wrap"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center" />
        </Border>

        <!--About TourAdding-->
        <Border Grid.Column="0"
                Background="#705E8397"
                CornerRadius="30"
                BorderThickness="1"
                BorderBrush="#705E8397"
                Width="650"
                Height="500"
                VerticalAlignment="Top"
                HorizontalAlignment="Left"
                Margin="70 15 30 0">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="5.5*" />
                    <RowDefinition Height="4.5*" />
                </Grid.RowDefinitions>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3.2*" />
                        <ColumnDefinition Width="6.8*" />
                    </Grid.ColumnDefinitions>

                    <!--TourName, Price, Pictures(Button) of TourAdding-->
                    <Border Grid.Column="1"
                            CornerRadius="30"
                            BorderThickness="1"
                            BorderBrush="Transparent">

                        <WrapPanel
                            Orientation="Vertical"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Stretch"
                            Margin="25">

                            <!--Agent's Name label-->
                            <Label
                                Content="Agent's Name"
                                Style="{StaticResource AddItemStyle}" />

                            <!--Agent's Name textBox-->
                            <Border
                                CornerRadius="10"
                                BorderThickness="4"
                                Width="350"
                                Height="50"
                                BorderBrush="white">
                                <TextBox
                                    Name="TbName"
                                    BorderThickness="0"
                                    Style="{StaticResource TextBoxStyle}" />
                            </Border>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>

                                <WrapPanel>
                                    <!--Phone label-->
                                    <Label
                                        Content="Phone"
                                        Margin=" 0 20 0 0 "
                                        Style="{StaticResource AddItemStyle}">
                                    </Label>

                                    <!--Phone textBox-->
                                    <Border
                                        CornerRadius="10"
                                        HorizontalAlignment="Left"
                                        BorderThickness="4"
                                        BorderBrush="white">
                                        <TextBox

                                            Name="TbPrice"
                                            Width="160"
                                            Height="40"
                                            BorderThickness="0"
                                            Style="{StaticResource TextBoxStyle}" />
                                    </Border>
                                </WrapPanel>

                                <WrapPanel Grid.Column="1">
                                    <!--Time label-->
                                    <Label
                                        Content="Time to receipts"
                                        Margin=" 10 20 0 0 "
                                        Style="{StaticResource AddItemStyle}" />

                                    <!--Time datePicker-->
                                    <Border
                                        CornerRadius="10"
                                        Width="160"
                                        Height="wrap"
                                        HorizontalAlignment="Left"
                                        Margin="10 0 0 0"
                                        BorderThickness="4"
                                        BorderBrush="white">
                                        <DatePicker
                                            Name="TbProfit"
                                            BorderThickness="0"/>
                                    </Border>
                                </WrapPanel>
                            </Grid>
                        </WrapPanel>
                    </Border>
                </Grid>

                <!--Short Description of TourAdding-->
                <Border Grid.Row="1">
                    <WrapPanel
                        Orientation="Vertical"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Margin="40 0 0 0">

                        <!--Short Description label-->
                        <Label
                            Content="Short Description"
                            Style="{StaticResource AddItemStyle}" />

                        <!--Short Description textBox-->
                        <Border
                            CornerRadius="10"
                            BorderThickness="4"
                            BorderBrush="white"
                            Background="White">
                            <TextBox
                                Name="TbShortDescription"
                                Width="330"
                                Height="170"
                                BorderThickness="0"
                                TextWrapping="Wrap"
                                FontSize="20"
                                FontFamily="Mulish" />
                        </Border>

                        <!--Picture label-->
                        <Label
                            Content="Picture"
                            Margin="20 0"
                            Style="{StaticResource AddItemStyle}" />

                        <!--Picture textBlock-->
                        <Border
                            Height="170"
                            Width="200"
                            CornerRadius="10"
                            BorderThickness="4"
                            BorderBrush="white"
                            Background="White"
                            Margin="20 0">
                            
                            <Image
                                Name="ImgPicture"
                                Stretch="None"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                Source="" />
                        </Border>
                    </WrapPanel>
                </Border>
            </Grid>
        </Border>

        <!--Destination Planning of TourAdding-->
        <Border Grid.Column="1"
                Background="#90A6A6A6"
                CornerRadius="30"
                BorderThickness="1"
                BorderBrush="#90A6A6A6"
                Width="450"
                Height="500"
                Margin="0 15 50 0"
                VerticalAlignment="Top">
            <Grid>
                <StackPanel
                    Orientation="Vertical"
                    VerticalAlignment="Top"
                    Margin="20 10 0 0">
                    
                    <!--Districts label-->
                    <Label
                        Content="District"
                        Style="{StaticResource AddItemStyle}" />

                    <!--Districts ComboBox-->
                    <Border
                        CornerRadius="10"
                        BorderThickness="4"
                        BorderBrush="white"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center">
                        <ComboBox
                            Name="CbDistricts"
                            Height="40"
                            Width="330"
                            Style="{StaticResource ComboBoxStyle}">
                        </ComboBox>
                    </Border>
                    
                    <!--Address label-->
                    <Label
                        Content="Address"
                        Style="{StaticResource AddItemStyle}" />

                    <!--Address textBox-->
                    <Border
                        CornerRadius="10"
                        BorderThickness="4"
                        Width="330"
                        Height="50"
                        BorderBrush="white">
                        <TextBox
                            BorderThickness="0"
                            Style="{StaticResource TextBoxStyle}" />
                    </Border>



                    <!--Address label-->
                    <Label
                        Margin="0 20 0 0"
                        Content="Type of Agent"
                        Style="{StaticResource AddItemStyle}" />

                    <!--Address comboBox-->
                    <Border
                        CornerRadius="10"
                        BorderThickness="4"
                        BorderBrush="white"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center">
                        <ComboBox
                            Height="40"
                            Width="330"
                            Style="{StaticResource ComboBoxStyle}">
                        </ComboBox>
                    </Border>


                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>