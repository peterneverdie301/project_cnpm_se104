<Page x:Class="AgencySystem.View.Pages.Manage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:AgencySystem.View.Pages"
      mc:Ignorable="d"
      Height="600" Width="1280">
    <Page.Resources>
        <ResourceDictionary Source="../Resouce.xaml"></ResourceDictionary>
    </Page.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <!--Create a new agent's type-->
        <Border
            Background="#80ECDABF"
            CornerRadius="30"
            BorderThickness="1"
            BorderBrush="#ECDABF"
            Width="550"
            Height="323"
            VerticalAlignment="Top"
            HorizontalAlignment="Center" Margin="0,10,0,0">

            <WrapPanel
                Orientation="Vertical"
                VerticalAlignment="Center"
                HorizontalAlignment="Left"
                Margin="30,30,0,0" Height="249">

                <!--Max number of agents-->
                <Label
                    Content="Agent type"
                    Style="{StaticResource AddItemStyle}" />
                <Border
                    CornerRadius="10"
                    BorderThickness="4"
                    Width="500
                    "
                    Height="40"
                    BorderBrush="white" Margin="0,5,0,0">
                    <TextBox
                        Name="TbType"
                        BorderThickness="0"
                        Style="{StaticResource TextBoxStyle}" PreviewTextInput="TbType_PreviewTextInput" />
                </Border>


                <Label
                    Content="Max Debt"
                    Style="{StaticResource AddItemStyle}" Margin="0,10,0,0" />
                <Border
                    CornerRadius="10"
                    BorderThickness="4"
                    Width="500
                    "
                    Height="40"
                    BorderBrush="white" Margin="0,5,0,0">
                    <TextBox
                        Name="TbDebt"
                        BorderThickness="0"
                        Style="{StaticResource TextBoxStyle}" PreviewTextInput="TbDebt_PreviewTextInput" />
                </Border>


                <WrapPanel
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom" 
                    RenderTransformOrigin="0.482,0.935" Margin="0,20,0,0">
                    <!--Add Button-->
                    <Button
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Margin="0 20  0 0"
                    Style="{StaticResource TabButton}"
                    Click="HandleAddType"
                    Content="Add" Height="30" Width="90" />
                    <!--Remove Button-->
                    <Button
                    Name="BtRemove"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Margin="20 20 0 0"
                    Click="HandleRemoveType"
                    Content="Remove" Height="30" Width="90" />
                </WrapPanel>
            </WrapPanel>
        </Border>

        <Border
            Background="#80ECDABF"
            CornerRadius="30"
            BorderThickness="1"
            BorderBrush="#ECDABF"
            Width="550"
            Height="180"
            VerticalAlignment="Top"
            HorizontalAlignment="Center" Margin="0,394,0,0">

            <WrapPanel
                Orientation="Vertical"
                VerticalAlignment="top"
                HorizontalAlignment="Left"
                Margin="30,30,0,30">

                <!--Max number of agents-->
                <Label
                    Content="Agent type list"
                    Style="{StaticResource AddItemStyle}" />
                <Border
                    
                    CornerRadius="10"
                    BorderThickness="4"
                    Width="500"
                    Height="40"
                    BorderBrush="white" RenderTransformOrigin="0.5,0.5" Margin="0,20,0,0">
                    <Border.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform/>
                            <TranslateTransform X="0"/>
                        </TransformGroup>
                    </Border.RenderTransform>
                    <ComboBox
                        Name="CbTypeList"
                        BorderThickness="0"
                        ItemContainerStyle="{DynamicResource theComboBoxItem}"
                        Style="{StaticResource theComboBox}" />
                </Border>

                <!--Add Button-->

            </WrapPanel>
        </Border>

        <!--Manage Agency-->
        <Border
            Grid.Column="1"
            Background="#705E8397"
            CornerRadius="30"
            BorderThickness="1"
            BorderBrush="#ECDABF"
            Width="550"
            Height="323"
            VerticalAlignment="Top"
            HorizontalAlignment="Center" Margin="0,10,0,0">

            <WrapPanel
                Orientation="Vertical"
                VerticalAlignment="Center"
                HorizontalAlignment="Left"
                Margin="30,0,0,0" Height="249
                ">

                <!--Max number of agents-->
                <Label
                    Content="Unit"
                    Style="{StaticResource AddItemStyle}" Margin="0,65,0,0" />
                <Border
                    CornerRadius="10"
                    BorderThickness="4"
                    Width="500
                    "
                    Height="40"
                    BorderBrush="white" Margin="0,5,0,0">
                    <TextBox
                        Name="TbUnit"
                        BorderThickness="0"
                        Style="{StaticResource TextBoxStyle}" />
                </Border>


                <WrapPanel
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom" 
                    RenderTransformOrigin="0.482,0.935" Margin="0,50,0,0">
                    <!--Add Button-->
                    <Button
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Margin="0 20  0 0"
                    Click="HandleAddUnit"
                    Style="{StaticResource TabButton}"
                    Content="Add" Height="30" Width="90" />
                    <!--Remove Button-->
                    <Button
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Click="HandleRemoveUnit"
                    Margin="20 20 0 0"
                    Content="Remove" Height="30" Width="90" />
                </WrapPanel>
            </WrapPanel>
        </Border>

        <!--Manage Unit-->
        <Border
            Grid.Column="1"
            Background="#705E8397"
            BorderBrush="#a6a6a6"
            BorderThickness="1"
            CornerRadius="30"
            Width="550"
            Height="180"
            VerticalAlignment="Top"
            HorizontalAlignment="Center"
            Margin="0,394,0,0">
            <WrapPanel
                Orientation="Vertical"
                VerticalAlignment="top"
                HorizontalAlignment="Left"
                Margin="30,30,0,30">

                <!--set number of unit-->
                <Label
                    Content="Unit list"
                    Style="{StaticResource AddItemStyle}" />
                <Border
                    CornerRadius="10"
                    BorderThickness="4"
                    Width="500"
                    Height="40"
                    BorderBrush="white" Margin="0,20,0,0">
                    <ComboBox
                        Name="CbUnitList"
                        BorderThickness="0"
                        ItemContainerStyle="{DynamicResource theComboBoxItem}"
                        Style="{StaticResource theComboBox}" />
                </Border>
                <!--Add Button-->
            </WrapPanel>
        </Border>
    </Grid>

</Page>