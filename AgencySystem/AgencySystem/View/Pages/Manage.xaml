<Page x:Class="AgencySystem.View.Pages.Manage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:AgencySystem.View.Pages"
      mc:Ignorable="d"
      Height="600" Width="1280">
    <Page.Resources>
        <ResourceDictionary Source="../Resouce.xaml"></ResourceDictionary>
    </Page.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="6*" />
            <ColumnDefinition Width="4*" />
        </Grid.ColumnDefinitions>
        
        <!--Create a new agent's type-->
        <Border
            Grid.Column="0"
            Background="#80ECDABF"
            CornerRadius="30"
            BorderThickness="1"
            BorderBrush="#ECDABF"
            Width="650"
            Height="300"
            VerticalAlignment="Center"
            HorizontalAlignment="Center">

            <WrapPanel
                Orientation="Vertical"
                VerticalAlignment="top"
                HorizontalAlignment="Center"
                Margin="0 30">

                <!--Max number of agents-->
                <Label
                    Content="Create a new agent's type"
                    Style="{StaticResource AddItemStyle}" />
                <Border
                    CornerRadius="10"
                    BorderThickness="4"
                    Width="350"
                    Height="40"
                    BorderBrush="white">
                    <TextBox
                        BorderThickness="0"
                        Style="{StaticResource TextBoxStyle}" />
                </Border>
                
                
                <Label
                    Content="Max Debt"
                    Style="{StaticResource AddItemStyle}" />
                <Border
                    CornerRadius="10"
                    BorderThickness="4"
                    Width="350"
                    Height="40"
                    BorderBrush="white">
                    <TextBox
                        BorderThickness="0"
                        Style="{StaticResource TextBoxStyle}" />
                </Border>
                
                <!--Add Button-->
                <Button
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Margin="0 20  0 0"
                    Style="{StaticResource TabButton}"
                    Content="Add" Height="30" Width="90" />
                
            </WrapPanel>
        </Border>
        
        <!--Manage Agency-->
        <Border
            Grid.Column="1"
            Background="#705E8397"
            BorderBrush="#a6a6a6"
            BorderThickness="1"
            CornerRadius="30"
            Width="500"
            Height="200"
            VerticalAlignment="top"
            HorizontalAlignment="Center"
            Margin="0 0 0 100">
            <WrapPanel
                Orientation="Vertical"
                VerticalAlignment="center"
                HorizontalAlignment="Center">

                <!--set number of Agents and unit-->
                <Label
                    Content="Number of Agents"
                    Style="{StaticResource AddItemStyle}" />
                <Border
                    CornerRadius="10"
                    BorderThickness="4"
                    Width="350"
                    Height="40"
                    BorderBrush="white">
                    <TextBox
                        BorderThickness="0"
                        Style="{StaticResource TextBoxStyle}" />
                </Border>

                <!--Add Button-->
                <Button
                    Style="{StaticResource TabButton}"
                    Content="Add" Height="30" HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Margin=" 0 20 0 0 "
                    Width="90" />

            </WrapPanel>
        </Border>
        
        <!--Manage Unit-->
        <Border
            Grid.Column="1"
            Background="#705E8397"
            BorderBrush="#a6a6a6"
            BorderThickness="1"
            CornerRadius="30"
            Width="500"
            Height="150"
            VerticalAlignment="bottom"
            HorizontalAlignment="Center"
            Margin="0 100 0 0">
            <WrapPanel
                Orientation="Vertical"
                VerticalAlignment="center"
                HorizontalAlignment="Center">

                <!--set number of unit-->
                <Label
                    Content="Number of Units"
                    Style="{StaticResource AddItemStyle}" />
                <Border
                    CornerRadius="10"
                    BorderThickness="4"
                    Width="350"
                    Height="40"
                    BorderBrush="white">
                    <TextBox
                        BorderThickness="0"
                        Style="{StaticResource TextBoxStyle}" />
                </Border>
                <!--Add Button-->
                <Button
                    Style="{StaticResource TabButton}"
                    Content="Add" Height="30" HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Margin="0 20 0 0"
                    Width="90" />
            </WrapPanel>
        </Border>
    </Grid>
    
</Page>